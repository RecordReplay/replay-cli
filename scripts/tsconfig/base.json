{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist"
  }
}
