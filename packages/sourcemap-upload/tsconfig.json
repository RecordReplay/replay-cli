{
  "extends": "@replay-cli/tsconfig/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    // Target Node > 10 since that is still in use in Google Firestore and
    // some clients use 10.x everywhere to be consistent with it.
    "target": "es2018",
    "lib": ["es2018", "dom"]
  },
  "include": ["src/**/*.ts"]
}
